package button

templ AddButton(id, class string) {
    <button type="button"
        onclick=""
        class={"add-service-btn bg-sky-500 hover:bg-sky-400 text-center text-gray-100 pointer rounded border-none mt-2.5 py-2.5 px-4", class}
        id={id}>{children...}</button>
}

templ RemoveParentButton() {
    <button type="button" class="remove-button bg-red-500 hover:bg-red-600 text-gray-100 rounded pointer py-2 px-4"
        onclick="removeParent(this)">{children...}</button>
}